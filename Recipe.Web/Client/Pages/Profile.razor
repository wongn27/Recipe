                IngredientsToSearchByList.Add(new UserFridgeIngredient
                {
                    Name = t.Name,
                    Id = t.Id,
                    Quantity = t.Quantity,
                    Unit = t.Unit
                });
            }
            //Turning on switch to show seleted ingredients
            ingCheck = true;
            //Rerendering to show seleted ingredients each time
            StateHasChanged();
        });

