@page "/login"
@inherits Recipe.Web.Data.Models.AuthenticateModel
@using Recipe.Web.Data.Models
<h3>Login</h3>
<br />
<br />

<EditForm Model="@AuthModel">

    <InputText id="email"
               @bind-Value="@AuthModel.Email"
               placeholder="Email">
    </InputText>
    <InputText id="password"
               @bind-Value="@AuthModel.Password"
               placeholder="Password">
    </InputText>
</EditForm>
<br />
<button type="button" @onclick="loginClick">Log In</button>
<p>@login</p>
@code {
    //test strings, final version will compare to database -AL
    private string email = "abc@123.com";
    private string password = "1234567890";
    private string check1;
    private string check2;
    private string login = "";

    private AuthenticateModel AuthModel { get; set; } = new AuthenticateModel();
    //login button event -AL
    private void loginClick()
    {
        if (string.Equals(email, check1) && string.Equals(password, check2))
        { login = "Login successful"; }
        else
        { login = "Login Failed"; }
    }
}
